{
  "name": "ableton-link-cli",
  "version": "1.0.0",
  "description": "A CLI tool for monitoring Ableton Link beat information in your terminal",
  "type": "module",
  "main": "src/cli.jsx",
  "bin": {
    "ableton-link-cli": "./bin/cli",
    "link-cli": "./bin/cli"
  },
  "scripts": {
    "start": "node --loader @esbuild-kit/esm-loader src/cli.jsx",
    "dev": "node --loader @esbuild-kit/esm-loader --watch src/cli.jsx",
    "demo": "node demo.js",
    "test-link": "node test.js",
    "test-cli": "node test-cli.js",
    "test-midi": "node test-midi.js",
    "test-latency": "node test-latency.js",
    "test-scheduler": "node tests/test-scheduler.js",
    "midi": "node --loader @esbuild-kit/esm-loader src/cli.jsx --midi",
    "scheduler": "node --loader @esbuild-kit/esm-loader src/cli.jsx --scheduler",
    "scheduler-pattern": "node --loader @esbuild-kit/esm-loader src/cli.jsx --scheduler --pattern patterns/example-pattern.json",
    "conductor": "node --loader @esbuild-kit/esm-loader src/cli.jsx --conductor",
    "conductor-anthropic": "node --loader @esbuild-kit/esm-loader src/cli.jsx --conductor --provider anthropic",
    "style-viewer": "node --loader @esbuild-kit/esm-loader tools/style-viewer/index.jsx",
    "test": "node test-cli.js"
  },
  "keywords": [
    "ableton",
    "link",
    "beat",
    "sync",
    "cli",
    "terminal",
    "music",
    "bpm"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "abletonlink": "^0.2.0-beta.0",
    "chalk": "^5.5.0",
    "easymidi": "^3.1.0",
    "ink": "^6.1.1",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "ink-text-input": "^6.0.0",
    "meow": "^13.2.0",
    "openai": "^5.12.2",
    "react": "^19.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@esbuild-kit/esm-loader": "^2.6.5",
    "babel-loader": "^10.0.0"
  }
}
